<?xml version="1.0"?>

<!DOCTYPE overlay
          SYSTEM "chrome://zotero-scihub/locale/toolsPane.dtd">

<overlay id="zoteroscihub"
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <commandset id="mainCommandSet">
        <command id="cmd_zotero_scihub_update_all"
                 oncommand="Zotero.Scihub.ToolsPane.updateAll();" />
    </commandset>

    <menupopup id="menu_ToolsPopup">
        <menuseparator />
        <menuitem class="menuitem-iconic"
                  image="chrome://zotero-scihub/skin/sci-hub-logo.svg"
                  id="zotero-scihub-tools-updateall"
                  label="&zotero.scihub.updateAll.label;"
                  command="cmd_zotero_scihub_update_all" />
    </menupopup>

  <script src="chrome://zotero/content/include.js"/>
  <script src="chrome://zotero-scihub/content/webpack.js"/>
  <script src="chrome://zotero-scihub/content/scihub.js"/>
</overlay>
