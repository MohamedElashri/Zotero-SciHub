<?xml version="1.0"?>

<!DOCTYPE overlay
          SYSTEM "chrome://zotero-scihub/locale/itemPane.dtd">

<overlay id="zoteroscihub"
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <popup id="zotero-collectionmenu">
        <menuseparator />
        <menuitem class="menuitem-iconic"
                  image="chrome://zotero-scihub/skin/sci-hub-logo.svg"
                  id="zotero-collectionmenu-scihub"
                  label="&zotero.scihub.updateCollection.label;"
                  oncommand="Zotero.Scihub.ItemPane.updateSelectedEntity()" />
    </popup>

    <popup id="zotero-itemmenu">
        <menuseparator />
        <menuitem class="menuitem-iconic"
                  image="chrome://zotero-scihub/skin/sci-hub-logo.svg"
                  id="zotero-itemmenu-scihub"
                  label="&zotero.scihub.update.label;"
                  oncommand="Zotero.Scihub.ItemPane.updateSelectedItems()" />
    </popup>

  <script src="chrome://zotero/content/include.js"/>
  <script src="chrome://zotero-scihub/content/webpack.js"/>
  <script src="chrome://zotero-scihub/content/scihub.js"/>
</overlay>
